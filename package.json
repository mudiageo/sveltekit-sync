{
	"name": "sveltekit-sync",
	"version": "0.1.0-alpha.1",
	"description": "Local-first sync engine for SvelteKit",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package -i ./src/pkg && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "pnpm prepack && changeset publish",
		"lint": "eslint .",
		"oxlint": "oxlint ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./adapters": {
			"types": "./dist/adapters/index.d.ts",
			"svelte": "./dist/adapters/index.js"
		},
		"./adapters/drizzle": {
			"types": "./dist/adapters/drizzle.d.ts",
			"svelte": "./dist/adapters/drizzle.js"
		},
		"./server": {
			"types": "./dist/server/index.d.ts",
			"svelte": "./dist/server/index.js"
		},
		"./types": {
			"types": "./dist/types.d.ts",
			"svelte": "./dist/types.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^22",
		"@vitest/browser-playwright": "^4.0.5",
		"drizzle-kit": "^0.31.5",
		"drizzle-orm": "^0.44.6",
		"eslint": "^9.38.0",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"oxlint": "^1.29.0",
		"playwright": "^1.56.1",
		"publint": "^0.3.14",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.1",
		"vite": "^7.1.10",
		"vitest": "^4.0.5",
		"vitest-browser-svelte": "^2.0.1"
	},
	"keywords": [
		"sveltekit",
		"sync",
		"offline-first",
		"local-first",
		"real-time",
		"optimistic-updates"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/mudiageo/sveltekit-sync.git"
	},
	"bugs": {
		"url": "https://github.com/mudiageo/sveltekit-sync/issues"
	},
	"dependencies": {
		"idb": "^8.0.3",
		"postgres": "^3.4.7",
		"valibot": "^1.1.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}